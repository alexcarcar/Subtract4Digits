<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Subtract4Digits" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Subtract4Digits.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Subtract4Digits.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Subtract4Digits.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Subtract4Digits.NumbersTop">
        <item name="android:textSize">50sp</item>
        <item name="android:baselineAlignBottom">true</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
    </style>
    <style name="Theme.Subtract4Digits.Numbers">
        <item name="android:textSize">100sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>